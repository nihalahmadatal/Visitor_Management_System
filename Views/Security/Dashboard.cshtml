
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

</head>
<body>
    <div class="container mt-5">
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success text-center">
                @TempData["Message"]
            </div>
        }

        <h2>Welcome, @ViewBag.Username 👮</h2>

        <p class="lead">You are now logged in as a Security user.</p>

        <a class="btn btn-primary" href="@Url.Action("CameraScan", "Security")">📷 Go to QR Scanner</a>
        <a class="btn btn-secondary" href="@Url.Action("Logout", "Security")">🚪 Logout</a>
    </div>
</body>
</html>
